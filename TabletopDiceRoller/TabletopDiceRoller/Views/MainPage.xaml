<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TabletopDiceRoller"
             x:Class="TabletopDiceRoller.MainPage">
    <TabbedPage.Resources>
        <StyleSheet Source="/css/styles.css" />
    </TabbedPage.Resources>
    <ContentPage x:Name="DicePage" Title="Dice Page">
        <StackLayout>
            <local:DicePageView/>
        </StackLayout>        
    </ContentPage>
    <ContentPage x:Name="CustomInput" Title="Custom Input">        
        <local:CustomInputView/>
    </ContentPage>
    <local:CustomRollsView x:Name="CustomRolls" Title="Custom Rolls"/>
</TabbedPage>
