<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TabletopDiceRoller.DiceRollView">
    <ContentPage.Content>
        <AbsoluteLayout x:Name="PopUp" BackgroundColor="Black">
            <AbsoluteLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="PageTap" NumberOfTapsRequired="1" />
            </AbsoluteLayout.GestureRecognizers>
                <StackLayout BackgroundColor="DarkSlateGray" AbsoluteLayout.LayoutBounds=".5,.5,.5,.3" AbsoluteLayout.LayoutFlags="All">
                    <Label x:Name="TopLabel" Text="" FontSize="Medium" TextColor="White" HorizontalOptions="Center" VerticalOptions="Start" />
                    <Label x:Name="ContentLabel" Text="" FontSize="72" TextColor="White" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
                    <Label x:Name="BottomLabel" Text="" FontSize="Small" TextColor="White" HorizontalOptions="Center" VerticalOptions="End" LineBreakMode="WordWrap" />
                </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>